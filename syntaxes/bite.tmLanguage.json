{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bite",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
        {
            "include": "#commentBlock"
        },
        {
            "include": "#commentLine"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#operators"
        }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bite",
				"match": "\\b(if|while|for|return|func|resource|float|double|bool|[u]?int(8|16|32|64))\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.bite",
			"begin": "[\"`]",
			"end": "[\"`]",
			"patterns": [
				{
					"name": "constant.character.escape.bite",
					"match": "\\\\."
				}
			]
		},
        "commentBlock": {
            "name": "comment.block.bite",
            "begin": "!\\*",
            "end": "\\*!"
        },
        "commentLine": {
            "name": "comment.line.bite",
            "match": "!>.+"
        },
        "functions": {
            "name": "entity.name.function.bite",
            "match": "([a-zA-Z_{1}][a-zA-Z0-9_]+)(?=\\()"
        },
        "operators": {
            "name": "keyword.operator.bite",
            "match": "[+-/*%><!&|~^=]|(\\/\\/|\\*\\*|\\+\\+|--|==|!=|>=|<=|<<|>>)"
        }
	},
	"scopeName": "source.bite"
}